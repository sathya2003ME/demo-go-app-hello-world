pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-token')
        IMAGE_NAME = 'yourusername/demo-python-app'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/sathya2003ME/demo-go-app-hello-world'
            }
        }

        stage('Build') {
            steps {
                echo 'No compilation needed for Python, skipping build...'
            }
        }

        stage('Test') {
            steps {
                echo 'Running basic test...'
                sh 'python -m pip install -r requirements.txt'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t $IMAGE_NAME:latest .'
            }
        }

        stage('Docker Push') {
            steps {
                sh '''
                echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                docker push $IMAGE_NAME:latest
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Deploying Python app to server/cloud..."'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished!'
        }
    }
}
